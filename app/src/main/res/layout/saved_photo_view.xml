<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/saved_photo_image_view"
        android:layout_width="130dp"
        android:layout_height="130dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#AAFFFFFF"
        android:text="Name of Photo"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/time_remaing_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/saved_photo_image_view"
        android:layout_alignTop="@+id/saved_photo_image_view"
        android:layout_alignParentTop="false"
        android:layout_marginTop="5dp"
        android:background="#E40000"
        android:padding="2dp"
        android:text="12 hours"
        android:textColor="#FFFFFF" />

</RelativeLayout>